
<HomeworkView>:
    orientation: 'vertical'

    width: root.width

    size_hint_y: None

    margin: (0, 20)

    ripple_color: 0.6, 0.6, 0.6, 0.5
    ripple_scale: 1
    ripple_alpha: 0.1

    on_press: root.display_hw()

    canvas.before:
        Color:
            rgba: (.9,.9,.9,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(5, 5), (5, 5), (5, 5), (5, 5)]

    MDLabel:
        text: root.hw_title
        font_style: 'H6'
        padding: (10, 10)
    
    MDGridLayout:
        cols: 2

        row_force_default: True
        row_default_height: 50

        size: root.width, 100

        MDLabel:
            font_style: 'Subtitle1'
            text: root.hw_subtitle

            size_hint_x: 1

            markup: True

            padding: (10, 20)
        