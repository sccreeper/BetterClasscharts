<HomeworkDetailsView>:
    
    orientation: 'vertical'

    # do_scroll_y: True
    # do_scroll_x: False
    #row_default_height: 50

    MDGridLayout:
        cols: 1

        rows: 2

        height: (len(root.hw_description) / 80) * 14
        width: 1.0
        # cols: 1

        #row_default_height: 32
        #row_force_default: False

        spacing: 32

        padding: [15, 15, 15, 15]

        MDGridLayout:

            cols: 1

            size_hint_y: 0.5

            adaaptive_height: True
            #orientation: 'vertical'
        
            MDLabel:
                text: root.hw_title
                font_style: 'H5'

                size_hint_y: 0.15
            
            MDGridLayout:

                size_hint_y: 0.15

                cols: 1
            
                MDLabel:
                    text: root.hw_set
                    font_style: 'Body1'
                    markup: True

                    size_hint_y: 0.5
                MDLabel:
                    text: root.hw_due
                    font_style: 'Body1'
                    markup: True

                    size_hint_y: 0.5

            GridLayout:

                size_hint_y: 0.5

                rows: 2

                padding: [0, 16, 0, 0]

                MDLabel:
                    size_hint_y: 0.1

                    text: 'Attachments'
                    font_style: 'Button'

                    #padding: [64, 0]
                
                RecycleView:

                    id: attachments

                    key_viewclass: 'viewclass'
                    key_size: 'height'

                    data: root.attachment_data

                    RecycleBoxLayout:
                        spacing: 16

                        padding: dp(16)
                        default_size: None, dp(48)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
            
            GridLayout:

                cols: 2

                size_hint_y: 0.25
                

                padding: [0, 32, 0, 0]

                MDCheckbox:
                    id: hw_check
                    active: root.hw_turned_in
                    size: "48dp", "48dp"

                    size_hint_x: 0.1

                    on_active: root.hand_in_hw(*args)

                MDLabel:
                    text: 'Completed'
                    font_style: 'Button'

                    #padding: [64, 0]
       
        ScrollView:
        
            size_hint_y: 0.5

            do_scroll_y: True
            do_scroll_x: False

            scroll_timeout: 250
            scroll_distance: 20


            MDLabel:
                
                size_hint: 1.0, None
                size: self.texture_size

                markup: True

                on_ref_press: root.open_link(*args)

                text: root.hw_description
                valign: 'middle'
                font_style: 'Body1'
        
