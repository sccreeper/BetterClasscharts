#:import get_color_from_hex kivy.utils.get_color_from_hex



<MainScreen>:

    MDBoxLayout:
        orientation: 'vertical'

        id: main_screen

        MDToolbar:
            title: "Activity"
            id: toolbar


        MDBottomNavigation:
            panel_color: get_color_from_hex("#eeeaea")
            selected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Activity'
                icon: 'bell'

                Screen:
                    id: activity_screen

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Homework'
                icon: 'bookshelf'

                id: homework_button

                Screen:
                    id: homework_screen

                    RecycleView:
                        key_viewclass: 'viewclass'
                        key_size: 'height'

                        id: homework_scroll

                        spacing: 64

                        RecycleBoxLayout:
                            spacing: 16

                            padding: dp(16)
                            default_size: None, dp(72)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Timetable'
                icon: 'calendar'

                Screen:
                    id: timetable_screen

                    MDSpinner:
                        id: homework_loading_spinner

                        size_hint: None, None
                        size: dp(46), dp(46)
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        active: True