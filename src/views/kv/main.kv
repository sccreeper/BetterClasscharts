#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<MainScreen>:

    MDBoxLayout:
        orientation: 'vertical'

        id: main_screen

        MDToolbar:
            title: "Activity"
            id: toolbar


        MDBottomNavigation:
            panel_color: get_color_from_hex("#eeeaea")
            selected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Activity'
                icon: 'bell'

                id: activity_button

                Screen:
                    id: activity_screen

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Homework'
                icon: 'bookshelf'

                id: homework_button

                ScreenManager:

                    id: homework_screen_manager
                    #current: 'HomeworkDetailsScreen'

                    transition: FadeTransition()

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Timetable'
                icon: 'calendar'

                id: timetable_button

                Screen:
                    id: timetable_screen

                    MDSpinner:
                        id: homework_loading_spinner

                        size_hint: None, None
                        size: dp(46), dp(46)
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        active: True


<HomeworkScreen>:
    #id: 'homework_screen'

    #name: 'HomeworkScreen'

    RecycleView:
        key_viewclass: 'viewclass'
        key_size: 'height'

        id: homework_scroll

        spacing: 64

        RecycleBoxLayout:
            spacing: 16

            padding: dp(16)
            default_size: None, dp(72)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<HomeworkDetailsScreen>:
    id: homework_details_screen

    name: 'homework_details'
