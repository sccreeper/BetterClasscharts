#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<MainScreen>:

    MDBoxLayout:
        orientation: 'vertical'

        id: main_screen

        MDToolbar:
            title: "Activity"
            id: toolbar

            right_action_items: [["cog", lambda x: app.show_settings()]]

        MDBottomNavigation:

            id: bottom_navigation

            MDBottomNavigationItem:
                name: 'activity'
                text: 'Activity'
                icon: 'bell'

                id: activity_button

                ActivityScreen:
                    id: activity_screen

            MDBottomNavigationItem:
                name: 'homework'
                text: 'Homework'
                icon: 'bookshelf'

                id: homework_button

                ScreenManager:

                    id: homework_screen_manager
                    #current: 'HomeworkDetailsScreen'

                    transition: FadeTransition()

            MDBottomNavigationItem:
                name: 'timetable'
                text: 'Timetable'
                icon: 'calendar'

                id: timetable_button

                Screen:
                    id: timetable_screen

                    Timetable:
                        id: timetable


<HomeworkScreen>:
    #id: 'homework_screen'

    #name: 'HomeworkScreen'

    RecycleView:
        key_viewclass: 'viewclass'
        key_size: 'height'

        id: homework_scroll

        spacing: 64

        RecycleBoxLayout:
            spacing: 16

            padding: dp(16)
            default_size: None, dp(72)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<HomeworkDetailsScreen>:
    id: homework_details_screen

    name: 'homework_details'
