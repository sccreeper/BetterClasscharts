
<SettingsScreen>
    MDBoxLayout:
        orientation: 'vertical'

        id: settings_screen

        MDToolbar:
            title: "Settings"
            id: settings_toolbar

            type: "top"

            left_action_items: [["arrow-left", lambda x: app.show_main_screen()]]
        
        MDBoxLayout:

            padding: [16, 16, 16, 16]

            orientation: 'vertical'
        
            MDLabel:
                id: name_label

                markup: True
                font_style: "Subtitle2"

                size_hint_y: 0.15

                text: root.student_name
            
            MDLabel:
                id: code_label

                markup: True
                font_style: "Subtitle1"

                size_hint_y: 0.15

                text: "[b]Code: [/b]" + root.student_code
            
            
            ScrollView:

                do_scroll_y: False
                do_scroll_x: False
            
                MDList:

                    OneLineIconListItem:
                        text: "Appearance"

                        on_release: root.show_appearance_screen(*args)

                        IconLeftWidget:
                            icon: "shape-outline"
                    
                    OneLineIconListItem:
                        text: "About"

                        on_release: root.about_screen(*args)

                        IconLeftWidget:
                            icon: "information-outline"
                    
                    OneLineIconListItem:
                        text: "Logout"

                        on_press: root.logout(*args)

                        IconLeftWidget:
                            icon: "exit-to-app"
