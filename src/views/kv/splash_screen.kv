<SplashScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (.12,.12,.12,1) if app.theme_cls.theme_style == "Dark" else (.9,.9,.9,1)
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "res/logo-128.png"
            size: self.texture_size
            pos_hint: {'center_x': .5, 'center_y': .5}    

        MDSpinner:
            size_hint: None, None
            size: dp(32), dp(32)
            pos_hint: {'center_x': .5, 'center_y': .25}    