<SyncScreen>:
    MDBoxLayout:
        orientation: 'vertical'

        id: about_screen

        MDToolbar:
            title: "Sync"
            id: settings_toolbar

            type: "top"

            left_action_items: [["arrow-left", lambda x: root.go_back()]]
        
        MDBoxLayout:

            padding: [16, 16, 16, 16]

            orientation: 'vertical'

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.15

                MDLabel:
                    text: "Enable sync"

                MDSwitch:
                    id: sync_switch

                    on_press: root.enable_sync()

                

                
            MDTextField:
                hint_text: "Server URL"
                id: server_url
                disabled: not sync_switch.active

            MDLabel:
                id: sync_status_label
                text: ""

                markup: True
                
                size_hint_y: 0.15

            MDRaisedButton:
                text: "Start sync"
                disabled: not sync_switch.active

                on_press: root.start_sync()

                size_hint_y: 0.15

            
            #Label for spacing
            MDLabel:
                text: ""
                
                size_hint_y: 0.5

            