#:import get_color_from_hex kivy.utils.get_color_from_hex



<MainScreen>:

    MDBoxLayout:
        orientation: 'vertical'

        id: main_screen

        MDToolbar:
            title: "Activity"
            id: toolbar


        MDBottomNavigation:
            panel_color: get_color_from_hex("#eeeaea")
            selected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Activity'
                icon: 'bell'

                Screen:
                    id: activity_screen

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Homework'
                icon: 'bookshelf'

                Screen:
                    id: homework_screen

                    ScrollView:
                        do_scroll_x: False
                        do_scroll_y: True

                        opacity: 0

                        id: homework_scroll
                    

                MDSpinner:
                    id: homework_loading_spinner

                    size_hint: None, None
                    size: dp(46), dp(46)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    active: True

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Timetable'
                icon: 'calendar'

                Screen:
                    id: timetable_screen